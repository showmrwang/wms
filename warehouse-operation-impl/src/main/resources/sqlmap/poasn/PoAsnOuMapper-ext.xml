<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<mapper namespace="com.baozun.scm.primservice.whoperation.dao.poasn.PoAsnOuDao">
	<resultMap id="PoAsnOuResultExt" type="com.baozun.scm.primservice.whoperation.model.poasn.PoAsnOu">
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="poAsnOuColumnsExt">
	    <![CDATA[
	        	id as id,
	        	po_id as poId,
	        	ou_id as ouId
	    ]]>
	</sql>
	
	<sql id="poAsnOuDynamicWhereExt">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>
	       
				<if test="id!=null">
					and id = #{id}
				</if>
	       
				<if test="poId!=null">
					and po_id = #{poId}
				</if>
	       
				<if test="ouId!=null">
					and ou_id = #{ouId}
				</if>
		</where>
	</sql>
	
	<select id="findPoAsnOuByPoIdOuId" resultMap="PoAsnOuResultExt">
    	select <include refid="poAsnOuColumnsExt" />
			from t_wh_poasn_ou 
			where po_id = #{poid} and ou_id = #{ouid}
    </select>
	
</mapper>
