<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<mapper namespace="com.baozun.scm.primservice.whoperation.dao.warehouse.HandoverCollectionConditionDao">
	<resultMap id="HandoverCollectionConditionResultExt" type="com.baozun.scm.primservice.whoperation.model.handover.HandoverCollectionCondition">
	</resultMap>
	<resultMap id="HandoverCollectionConditionCommandResultExt" type="com.baozun.scm.primservice.whoperation.command.warehouse.HandoverCollectionConditionCommand">
	</resultMap>
	<!-- 用于select查询公用抽取的列 -->
	<sql id="handoverCollectionConditionColumnsExt">
	    <![CDATA[
	        	rule.id as id,
	        	rule.chr_id as chrId,
	        	rule.rule_condition_id as ruleConditionId,
	        	rule.ou_id as ouId,
				cond.column_name as ruleConditionName
	    ]]>
	</sql>
	
	<sql id="handoverCollectionConditionDynamicWhereExt">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>
	       
				<if test="id!=null">
					and id = #{id}
				</if>
	       
				<if test="chrId!=null">
					and chr_id = #{chrId}
				</if>
	       
				<if test="ruleConditionId!=null">
					and rule_condition_id = #{ruleConditionId}
				</if>
	       
				<if test="ouId!=null">
					and ou_id = #{ouId}
				</if>
		</where>
	</sql>
	
	<select id="findListByRuleConditionIdAndouId"  resultMap="HandoverCollectionConditionCommandResultExt" >
			select <include refid="handoverCollectionConditionColumnsExt" />
		    <![CDATA[
			   from t_wh_handover_collection_condition rule 
			left join t_wh_recommend_rule_condition cond on rule.chr_id =cond.id
		        where 
		        rule.rule_condition_id = #{ruleConditionId} 
		        and  rule.ou_id = #{ouId}
		    ]]>
		</select>	
		
	<select id="findListCountByRuleId" resultType="long">
        select count(1)
        from t_wh_handover_collection_condition
        where
            rule_condition_id = #{ruleConditionId}
            and ou_id = #{ouId}
    </select>

    <delete id="deleteByRuleId">
        delete from t_wh_handover_collection_condition
        where
            rule_condition_id = #{ruleConditionId}
            and ou_id = #{ouId}
    </delete>
</mapper>
