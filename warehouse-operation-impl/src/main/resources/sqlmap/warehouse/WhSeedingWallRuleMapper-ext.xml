    <select id="findByIdExt" resultMap="WhSeedingWallRuleCommandResultExt">
        select
            <include refid="whSeedingWallRuleCommandColumnsExt"/>
        from t_wh_seedingwall_rule as rule
            left join t_wh_outbound_facility_group as facilityGroup on rule.outbound_facility_group_id = facilityGroup.id
