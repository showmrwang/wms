<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<mapper namespace="com.baozun.scm.primservice.whoperation.dao.warehouse.WhFunctionCollectionDao">
	<resultMap id="WhFunctionCollectionResultExt" type="com.baozun.scm.primservice.whoperation.model.warehouse.WhFunctionCollection">
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="whFunctionCollectionColumnsExt">
	    <![CDATA[
	        	id as id,
	        	function_id as functionId,
	        	collection_pattern as collectionPattern,
	        	container_qty as containerQty,
	        	ou_id as ouId
	    ]]>
	</sql>
	
	<sql id="whFunctionCollectionDynamicWhereExt">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>
	       
				<if test="id!=null">
					and id = #{id}
				</if>
	       
				<if test="functionId!=null">
					and function_id = #{functionId}
				</if>
	       
				<if test="collectionPattern!=null">
					and collection_pattern = #{collectionPattern}
				</if>
	       
				<if test="containerQty!=null">
					and container_qty = #{containerQty}
				</if>
	       
				<if test="ouId!=null">
					and ou_id = #{ouId}
				</if>
		</where>
	</sql>
	
	<select id="findWhFunctionCollectionByFunctionId" resultMap="WhFunctionCollectionResultExt">
		select 
			<include refid="whFunctionCollectionColumnsExt"/>
		from 
			t_wh_function_collection
		where 
			function_id = #{funcId}
			and ou_id = #{ouId}
	</select>
</mapper>
