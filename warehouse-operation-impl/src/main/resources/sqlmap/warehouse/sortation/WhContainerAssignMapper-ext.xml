<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<mapper namespace="com.baozun.scm.primservice.whoperation.dao.warehouse.sortation.WhContainerAssignDao">
	<resultMap id="WhContainerAssignResultExt" type="com.baozun.scm.primservice.whoperation.model.warehouse.sortation.WhContainerAssign">
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="whContainerAssignColumnsExt">
	    <![CDATA[
	        	id as id,
	        	user_id as userId,
	        	container_id as containerId,
	        	rule_id as ruleId,
	        	uuid as uuid,
	        	ou_id as ouId
	    ]]>
	</sql>
	
	<sql id="whContainerAssignDynamicWhereExt">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>
	       
				<if test="id!=null">
					and id = #{id}
				</if>
	       
				<if test="userId!=null">
					and user_id = #{userId}
				</if>
	       
				<if test="containerId!=null">
					and container_id = #{containerId}
				</if>
	       
				<if test="ruleId!=null">
					and rule_id = #{ruleId}
				</if>
	       
				<if test="uuid!=null">
					and uuid = #{uuid}
				</if>
	       
				<if test="ouId!=null">
					and ou_id = #{ouId}
				</if>
		</where>
	</sql>
	
	<delete id="deleteWhContainerAssign">
		delete from t_wh_container_assign 
			where
			ou_id = #{ouid}
			<if test="containerId!=null">
				and container_id = #{containerId}
			</if>
	</delete>
	
	<select id="findWhContainerAssignByUuidOrUserId" resultMap="WhContainerAssignResultExt">
		select <include refid="whContainerAssignColumnsExt" /> 
			from t_wh_container_assign 
		<where>
			ou_id = #{ouid} 
			and uuid = #{uuid} 
			and rule_id = #{ruleid}
			<if test="userid!=null">
				and user_id = #{userid}
			</if>
			limit 0,1 
		</where>
	</select>
	
	<select id="findWhContainerAssignByContainerId" resultMap="WhContainerAssignResultExt">
		select <include refid="whContainerAssignColumnsExt" /> 
			from t_wh_container_assign 
			where
			ou_id = #{ouid} 
			and container_id = #{containerId}
	</select>
	
</mapper>
