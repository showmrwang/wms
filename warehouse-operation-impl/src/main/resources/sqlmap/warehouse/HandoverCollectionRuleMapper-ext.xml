<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<mapper namespace="com.baozun.scm.primservice.whoperation.dao.warehouse.HandoverCollectionRuleDao">
	<resultMap id="HandoverCollectionRuleResultExt" type="com.baozun.scm.primservice.whoperation.model.handover.HandoverCollectionRule">
	</resultMap>
	<resultMap id="HandoverCollectionRuleCommandExt" type="com.baozun.scm.primservice.whoperation.command.warehouse.HandoverCollectionRuleCommand">
	</resultMap>
	<!-- 用于select查询公用抽取的列 -->
	<sql id="handoverCollectionRuleColumnsExt">
	    <![CDATA[
	        	id as id,
	        	rule_name as ruleName,
	        	rule_code as ruleCode,
	        	rule_type as ruleType,
	        	rule as rule,
	        	rule_sql as ruleSql,
	        	ou_id as ouId,
	        	apply_type as applyType,
	        	handover_station_id as handoverStationId,
	        	priority as priority,
	        	description as description,
	        	create_time as createTime,
	        	last_modify_time as lastModifyTime,
	        	created_id as createdId,
	        	modified_id as modifiedId,
	        	lifecycle as lifecycle
	    ]]>
	</sql>
	
	<sql id="handoverCollectionRuleDynamicWhereExt">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>
	       
				<if test="id!=null">
					and id = #{id}
				</if>
	       
	       
		       <if test="ruleName!=null and ruleName!=''">
					and rule_name like #{ruleName}
				</if>
	       
	       
		       <if test="ruleCode!=null and ruleCode!=''">
					and rule_code like #{ruleCode}
				</if>
	       
	       
		       <if test="ruleType!=null and ruleType!=''">
					and rule_type = #{ruleType}
				</if>
	       
	       
		       <if test="rule!=null and rule!=''">
					and rule = #{rule}
				</if>
	       
	       
		       <if test="ruleSql!=null and ruleSql!=''">
					and rule_sql = #{ruleSql}
				</if>
	       
				<if test="ouId!=null">
					and ou_id = #{ouId}
				</if>
	       
	       
		       <if test="applyType!=null and applyType!=''">
					and apply_type = #{applyType}
				</if>
	       
				<if test="handoverStationId!=null">
					and handover_station_id = #{handoverStationId}
				</if>
	       
				<if test="priority!=null">
					and priority = #{priority}
				</if>
	       
	       
		       <if test="description!=null and description!=''">
					and description = #{description}
				</if>
	       
				<if test="createTime!=null">
					and create_time = #{createTime}
				</if>
	       
				<if test="lastModifyTime!=null">
					and last_modify_time = #{lastModifyTime}
				</if>
	       
				<if test="createdId!=null">
					and created_id = #{createdId}
				</if>
	       
				<if test="modifiedId!=null">
					and modified_id = #{modifiedId}
				</if>
	       
				<if test="lifecycle!=null">
					and lifecycle = #{lifecycle}
				</if>
		</where>
	</sql>
	
	
	 <select id="findListCountByQueryMapExt" resultType="long">
        select count(1) from t_wh_handover_collection_rule 
		<include refid="handoverCollectionRuleDynamicWhereExt"/>    
    </select>
	
	 <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 offset,pageSize,lastRows 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="findListByQueryMapWithPageExt" resultMap="HandoverCollectionRuleResultExt">
    	select <include refid="handoverCollectionRuleColumnsExt" />
	    from t_wh_handover_collection_rule 
		<include refid="handoverCollectionRuleDynamicWhereExt"/>
		
    </select>
	
	<select id="findByIdExt"   resultType="com.baozun.scm.primservice.whoperation.command.warehouse.HandoverCollectionRuleCommand" >
			select <include refid="handoverCollectionRuleColumnsExt" />
		    <![CDATA[
			    from t_wh_handover_collection_rule 
		        where 
		        id = #{id}   and  ou_id = #{ouId}
		    ]]>
		</select>								
	<select id="findByIdAndOuId"   resultType="com.baozun.scm.primservice.whoperation.model.handover.HandoverCollectionRule" >
			select <include refid="handoverCollectionRuleColumnsExt" />
		    <![CDATA[
			    from t_wh_handover_collection_rule 
		        where 
		        id = #{id}   and  ou_id = #{ouId}
		    ]]>
		</select>	
		
		<select id="checkUnique" resultType="int">
        select count(1) from t_wh_handover_collection_rule
        <where>
            <if test="id!=null">
                and id != #{id}
            </if>
            <if test="(ruleName!=null and ruleName!='')
                    or (ruleCode!=null and ruleCode!='')
                    or (priority!=null and priority!='')">
                and (
                <trim prefix="" prefixOverrides="or">
                    <if test="ruleName!=null and ruleName!=''">
                        or rule_name = #{ruleName}
                    </if>
                    <if test="ruleCode!=null and ruleCode!=''">
                        or rule_code = #{ruleCode}
                    </if>
                    <if test="priority!=null and priority!=''">
                        or priority = #{priority}
                    </if>
                </trim>
                )
            </if>
            and ou_id = #{ouId}
        </where>
    </select>
    <update id="UpdatelifeCycle"  >
	    <![CDATA[
	        UPDATE t_wh_handover_collection_rule SET
		        lifecycle = #{lifecycle} 
	        WHERE 
		        id = #{id} 
	    ]]>
		</update>
    
    <select id="executeRuleSql" resultType="Long">
        ${handoverCollectionRuleSql}
    </select>
    
    <select id="findAllHandoverCollectionRules" resultMap="HandoverCollectionRuleResultExt">
    	select
    		<include refid="handoverCollectionRuleColumnsExt"/>
    	from 
    		t_wh_handover_collection_rule
    	where 
    		ou_id = #{ouId}
    		and lifecycle = 1
    	order by 
    		priority
    </select>
</mapper>
