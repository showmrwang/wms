<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<mapper namespace="com.baozun.scm.primservice.whoperation.dao.warehouse.RecommendRuleConditionDao">
    <resultMap id="RecommendRuleConditionResultExt"
               type="com.baozun.scm.primservice.whoperation.model.warehouse.RecommendRuleCondition">
    </resultMap>
    <resultMap id="recommendRuleConditionCommand"
               type="com.baozun.scm.primservice.whoperation.command.warehouse.RecommendRuleConditionCommand">
    </resultMap>
    <!-- 用于select查询公用抽取的列 -->
    <sql id="recommendRuleConditionColumnsExt">
        <![CDATA[
           	id as id,
           	table_name as tableName,
           	table_code as tableCode,
           	column_name as columnName,
           	column_code as columnCode,
           	column_property as columnProperty,
           	rule_type as ruleType,
           	gorup_code as gorupCode,
           	gorup_name as gorupName,
           	gorup_id as gorupId,
           	create_time as createTime,
           	created_id as createdId,
           	last_modify_time as lastModifyTime,
           	modified_id as modifiedId
       ]]>
    </sql>

    <sql id="recommendRuleConditionDynamicWhereExt">
        <!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
        <where>

            <if test="id!=null">
                and id = #{id}
            </if>


            <if test="tableName!=null and tableName!=''">
                and table_name = #{tableName}
            </if>


            <if test="tableCode!=null and tableCode!=''">
                and table_code = #{tableCode}
            </if>


            <if test="columnName!=null and columnName!=''">
                and column_name = #{columnName}
            </if>


            <if test="columnCode!=null and columnCode!=''">
                and column_code = #{columnCode}
            </if>


            <if test="columnProperty!=null and columnProperty!=''">
                and column_property = #{columnProperty}
            </if>


            <if test="ruleType!=null and ruleType!=''">
                and rule_type = #{ruleType}
            </if>


            <if test="gorupCode!=null and gorupCode!=''">
                and gorup_code = #{gorupCode}
            </if>


            <if test="gorupName!=null and gorupName!=''">
                and gorup_name = #{gorupName}
            </if>

            <if test="gorupId!=null">
                and gorup_id = #{gorupId}
            </if>

            <if test="createTime!=null">
                and create_time = #{createTime}
            </if>

            <if test="createdId!=null">
                and created_id = #{createdId}
            </if>

            <if test="lastModifyTime!=null">
                and last_modify_time = #{lastModifyTime}
            </if>

            <if test="modifiedId!=null">
                and modified_id = #{modifiedId}
            </if>
        </where>
    </sql>

    <select id="getConditionListByRuleType" resultMap="recommendRuleConditionCommand">
        select
        <include refid="recommendRuleConditionColumnsExt"/>
        from t_wh_recommend_rule_condition
        where rule_type = #{ruleType}
    </select>

    <select id="getSelectColumnsByConditionIds" resultMap="recommendRuleConditionCommand">
        select
        <include refid="recommendRuleConditionColumnsExt"/>
        from t_wh_recommend_rule_condition
        where id in
        <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

</mapper>
