<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<mapper namespace="com.baozun.scm.primservice.whoperation.dao.warehouse.WhFacilityQueueDao">
    <resultMap id="WhFacilityQueueResultExt" type="com.baozun.scm.primservice.whoperation.model.warehouse.WhFacilityQueue">
    </resultMap>

    <!-- 用于select查询公用抽取的列 -->
    <sql id="whFacilityQueueColumnsExt">
        <![CDATA[
                id as id,
                batch as batch,
                temporary_storage_location_id as temporaryStorageLocationId,
                create_time as createTime,
                is_rec as isRec,
                ou_id as ouId
        ]]>
    </sql>

    <sql id="whFacilityQueueDynamicWhereExt">
        <!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
        <where>

            <if test="id!=null">
                and id = #{id}
            </if>


            <if test="batch!=null and batch!=''">
                and batch = #{batch}
            </if>

            <if test="temporaryStorageLocationId!=null">
                and temporary_storage_location_id = #{temporaryStorageLocationId}
            </if>

            <if test="createTime!=null">
                and create_time = #{createTime}
            </if>

            <if test="isRec!=null">
                and is_rec = #{isRec}
            </if>

            <if test="ouId!=null">
                and ou_id = #{ouId}
            </if>
        </where>
    </sql>

 	<delete id="deleteExt" parameterType="java.lang.Long">
        <![CDATA[
            delete from t_wh_facility_queue where
                id = #{id} and ou_id=#{ouId}
        ]]>
    </delete>
    
    
    <select id="findSortedQueue" resultMap="WhFacilityQueueResult">
        select
        <include refid="whFacilityQueueColumns"/>
        from t_wh_facility_queue
       	where ou_id=#{ouId} and is_rec=1
       	order by create_time asc


    </select>

</mapper>
