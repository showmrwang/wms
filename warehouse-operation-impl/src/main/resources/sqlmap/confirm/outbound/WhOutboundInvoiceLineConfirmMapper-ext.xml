<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<mapper namespace="com.baozun.scm.primservice.whoperation.dao.confirm.outbound.WhOutboundInvoiceLineConfirmDao">
	<resultMap id="WhOutboundInvoiceLineConfirmResultExt" type="com.baozun.scm.primservice.whoperation.model.confirm.outbound.WhOutboundInvoiceLineConfirm">
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="whOutboundInvoiceLineConfirmColumnsExt">
	    <![CDATA[
	        	id as id,
	        	outbound_invoice_confirm_id as outboundInvoiceConfirmId,
	        	linenum as linenum,
	        	qty as qty,
	        	unit_price as unitPrice,
	        	amt as amt,
	        	item as item,
	        	ou_id as ouId
	    ]]>
	</sql>
	
	<sql id="whOutboundInvoiceLineConfirmDynamicWhereExt">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>
	       
				<if test="id!=null">
					and id = #{id}
				</if>
	       
				<if test="outboundInvoiceConfirmId!=null">
					and outbound_invoice_confirm_id = #{outboundInvoiceConfirmId}
				</if>
	       
	       
		       <if test="linenum!=null and linenum!=''">
					and linenum = #{linenum}
				</if>
	       
				<if test="qty!=null">
					and qty = #{qty}
				</if>
	       
				<if test="unitPrice!=null">
					and unit_price = #{unitPrice}
				</if>
	       
				<if test="amt!=null">
					and amt = #{amt}
				</if>
	       
	       
		       <if test="item!=null and item!=''">
					and item = #{item}
				</if>
	       
				<if test="ouId!=null">
					and ou_id = #{ouId}
				</if>
		</where>
	</sql>
	
	<select id="findWhOutboundInvoiceLineConfirmByInvoiceId" resultMap="WhOutboundInvoiceLineConfirmResultExt">
		select <include refid="whOutboundInvoiceLineConfirmColumnsExt" />
		from t_wh_outbound_invoice_line_confirm 
		where 
		outbound_invoice_confirm_id = #{id} 
		and ou_id = #{ouid}
	</select>
	
</mapper>
