<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<mapper namespace="com.baozun.scm.primservice.whoperation.dao.collect.WhOdoArchivIndexDao">
	<resultMap id="WhOdoArchivIndexResultExt" type="com.baozun.scm.primservice.whoperation.model.collect.WhOdoArchivIndex">
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="whOdoArchivIndexColumnsExt">
	    <![CDATA[
	        	id as id,
	        	ec_order_code as ecOrderCode,
	        	wms_odo_code as wmsOdoCode,
	        	is_returned_purchase as isReturnedPurchase,
	        	ou_id as ouId,
	        	sys_date as sysDate,
	        	data_source as dataSource
	    ]]>
	</sql>
	
	<sql id="whOdoArchivIndexDynamicWhereExt">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>
	       
				<if test="id!=null">
					and id = #{id}
				</if>
	       
	       
		       <if test="ecOrderCode!=null and ecOrderCode!=''">
					and ec_order_code = #{ecOrderCode}
				</if>
	       
				<if test="ouId!=null">
					and ou_id = #{ouId}
				</if>
	       
	       
		       <if test="sysDate!=null and sysDate!=''">
					and sys_date = #{sysDate}
				</if>
	       
	       
		       <if test="dataSource!=null and dataSource!=''">
					and data_source = #{dataSource}
				</if>
		</where>
	</sql>
	
	<select id="findWhOdoArchivIndexByEcOrderCode" resultMap="WhOdoArchivIndexResultExt">
		select
		<include refid="whOdoArchivIndexColumnsExt" />
		from 
		t_wh_odo_archiv_index_${num}
		where
		ec_order_code = #{ecOrderCode} 
		<if test="dataSource!=null and dataSource!=''">
				and data_source = #{dataSource}
		</if>
		<if test="wmsOdoCode!=null and wmsOdoCode!=''">
				and wms_odo_code = #{wmsOdoCode}
		</if>
		<if test="ouid!=null">
				and ou_id = #{ouid}
		</if>
	</select>
	
	<select id="findWhOdoArchivIndexData" resultMap="WhOdoArchivIndexResultExt">
		select 
			<include refid="whOdoArchivIndexColumnsExt"/>
		from 
			t_wh_odo_archiv_index
		where
			ou_id = #{ouId}
	</select>
	
	<delete id="deleteWhOdoArchivIndexById">
		delete from 
			t_wh_odo_archiv_index 
		where 
			id = #{id}
			and ou_id = #{ouId}
	</delete>
	
	<select id="checkWhOdoArchivLineIndexExsits" resultType="int">
		select
			count(1)
		from
			t_wh_odo_archiv_line_index_#{num} l
		where
			l.ec_order_code = #{ecOrderCode}
			and l.data_source = #{dataSource}
	</select>
	
	<update id="updateReturnedPurchase">
		update 
			t_wh_odo_archiv_index_${num} 
		set
			is_returned_purchase = 1
		where 
			id = #{id}
			and ou_id = #{ouId}
	</update>
</mapper>
